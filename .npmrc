# pnpm-specific configuration options
# Note: npm will warn about these options as they are pnpm-specific.
# These warnings are harmless and can be ignored when using pnpm.
auto-install-peers=true
engine-strict=true
link-workspace-packages=true
publish-branch=main
save-exact=true
save-prefix=""
save-workspace-protocol=rolling
strict-peer-dependencies=false
experimental-strip-types=true

# Suppress npm warnings about unknown config options
# (npm reads this file when invoked via npx)
loglevel=error
