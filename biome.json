{
  "$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true,
    "defaultBranch": "main"
  },
  "files": {
    "includes": [
      "**",
      "!**/public",
      "!**/dist",
      "!**/*generated*",
      "!**/coverage",
      "!**/node_modules",
      "!**/.turbo",
      "!**/.vite",
      "!**/.vscode",
      "!**/.sanity",
      "!**/.astro",
      "!**/*.css"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noArrayIndexKey": "off",
        "noAssignInExpressions": "off",
        "noUnknownAtRules": "off"
      },
      "style": {
        "noNonNullAssertion": "off",
        "noUnusedTemplateLiteral": "off",
        "useBlockStatements": "error"
      },
      "a11y": {
        "useKeyWithClickEvents": "off",
        "noSvgWithoutTitle": "off",
        "useButtonType": "off"
      },
      "correctness": {
        "noUnknownMediaFeatureName": "off",
        "noUnusedVariables": "off",
        "noUnusedImports": "off"
      },
      "complexity": {
        "noImportantStyles": "off"
      }
    }
  },
  "formatter": {
    "enabled": true
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "javascript": {
    "formatter": {
      "enabled": true,
      "trailingCommas": "all",
      "semicolons": "always",
      "attributePosition": "multiline",
      "indentStyle": "space",
      "quoteStyle": "single",
      "indentWidth": 2,
      "bracketSpacing": true
    }
  },
  "json": {
    "parser": {
      "allowComments": true
    },
    "formatter": {
      "enabled": true,
      "indentStyle": "space",
      "indentWidth": 2
    }
  }
}
