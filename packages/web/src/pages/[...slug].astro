---
import LayoutBase from '../layouts/Base.astro';
import LayoutPage from '../layouts/Page.astro';
import { getPages } from '../data/pages';

export async function getStaticPaths() {
  return getPages();
};

const { body, title, image, meta } = Astro.props;
---
<LayoutBase modifier="page" title={title} meta={meta}>
  <LayoutPage title={title} body={body} image={image} />
</LayoutBase>

