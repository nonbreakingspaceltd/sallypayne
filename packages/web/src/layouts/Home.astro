---
// import HomeCanvas from '../components/HomeCanvas/HomeCanvas.vue';
// import SallyPayneHome from '../assets/images/sally-payne-home.svg';

const { title } = Astro.props;
---
<div class="sp-l-home">
  <h1 class="sp-u-sr-only">
    {title}
  </h1>
  <!-- <HomeCanvas client:load src="/animations/home/sallypayne.html" placeholder="/animations/home/images/lqip.jpg" /> -->
  <!-- <SallyPayneHome class="sp-l-home__image" /> -->
  <div class="sp-l-home__media">
    <img src="/images/sally-payne-home.svg" class="sp-l-home__image" alt="Homepage Illustration of Charactacters" width="1024" height="525" />
  </div>
</div>

<style lang="postcss" global>
.sp-l-home {
  flex: 1;
  display: flex;
}

.sp-l-home__media {
  width: 100%;
  overflow: auto;
  flex: 1;
  padding: 0 var(--space-x-4);

  @media (--mq-md) {
    margin-top: auto;
    padding: 0 var(--space-x-6);
  }
}

.sp-l-home__image {
  height: 100%;
  width: auto;
  max-width: none;
  position: relative;

  @media (--mq-md) {
    height: auto;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  @media (--mq-xxxl) {
    max-width: 3000px;
  }
}
</style>
