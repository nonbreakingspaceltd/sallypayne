---
import LayoutBase from './Base.astro';
import Picture from '../components/Picture/Picture.vue';
import SanityBlocks from '../components/SanityBlocks/SanityBlocks.vue';

const { title, image, body, meta, variant } = Astro.props;
---
<LayoutBase variant={variant} title={title} meta={meta}>
  <div class="sp-l-page">
    <div class="sp-l-page__media">
      <Picture {...image} class="sp-l-page__media__picture" loading="eager" />
    </div>
    <div class="sp-l-page__body">
      <div class="sp-l-page__body__inner sp-l-flow">
        <h1 class="sp-o-pagetitle">{title}</h1>
        <slot />
        <SanityBlocks blocks={body} />
      </div>
    </div>
  </div>
</LayoutBase>

<style lang="postcss" global>
@import '../assets/styles/tools';

.sp-l-page {
  width: 100%;

  @media (--mq-lg) {
    display: flex;
    flex-direction: row;
    flex: 1;
    min-height: min-content;
  }
}

.sp-l-page__body {
  padding: var(--space-y-6) var(--space-x-4);
  position: relative;

  @media (--mq-md) {
    padding: var(--space-y-8) var(--space-x-8);
  }

  @media (--mq-lg) {
    flex: 1;
    max-width: 50%;
    flex-basis: 50%;
    min-height: min-content;
    padding: var(--space-y-12) var(--space-x-12);
    background-color: var(--color-lightest-grey);
  }
}

.sp-l-page__body__inner {
  max-width: 780px;
  width: 100%;
}

.sp-l-page__media {
  position: relative;
  padding: 0;

  @media (--mq-md) {
    height: 50vh;
  }

  @media (--mq-lg) {
    height: auto;
  }

  @media (--mq-lg) {
    flex: 1;
    max-width: 50%;
    flex-basis: 50%;
    min-height: min-content;
    background-color: var(--color-light-grey);
  }
}

.sp-l-page__media__picture {
  width: 100%;
  height: auto;
  display: block;
  position: relative;

  @media (--mq-md) {
    width: 100%;
    height: 100%;
  }

  picture,
  img {
    width: 100%;
    height: auto;
    display: block;

    @media (--mq-md) {
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
}
</style>
