---
import Picture from '../components/Picture/Picture.vue';
import SanityBlocks from '../components/SanityBlocks/SanityBlocks.vue';

const { title, image, body } = Astro.props;
---
<div class="sp-l-page">
  <div class="sp-l-page__media">
    <Picture class="sp-l-page__media__picture" {...image} />
  </div>
  <div class="sp-l-page__body sp-l-flow">
    <h1 class="sp-o-pagetitle">{title}</h1>
    <slot />
    <SanityBlocks blocks={body} />
  </div>
</div>

<style lang="postcss" global>
.sp-l-page {
  width: 100%;

  @media (--mq-l) {
    display: flex;
    flex-direction: row;
    flex: 1;
    min-height: min-content;
  }
}

.sp-l-page__body {
  padding: 24px 16px;
  position: relative;

  @media (--mq-m) {
    padding: 32px;
  }

  @media (--mq-l) {
    flex: 1;
    max-width: 50%;
    flex-basis: 50%;
    min-height: min-content;
    padding: 48px;
  }
}

.sp-l-page__media {
  position: relative;
  padding: 0;

  @media (--mq-m) {
    height: 50vh;
  }

  @media (--mq-l) {
    height: auto;
  }

  @media (--mq-l) {
    flex: 1;
    max-width: 50%;
    flex-basis: 50%;
    min-height: min-content;
    background-color: #ccc;
  }
}

.sp-l-page__media__picture {
  width: 100%;
  height: auto;
  display: block;
  position: relative;

  @media (--mq-m) {
    width: 100%;
    height: 100%;
  }

  picture,
  img {
    width: 100%;
    height: auto;
    display: block;

    @media (--mq-m) {
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      right: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  }
}
</style>
