---
import LayoutBase from './Base.astro';
import BackLink from '../components/BackLink/BackLink.vue';
import SanityBlocks from '../components/SanityBlocks/SanityBlocks.vue';

const { title, publishedDate, body, meta } = Astro.props;
---
<LayoutBase variant="post" title={title} meta={meta}>
  <article class="sp-l-post">
    <div class="sp-l-post__inner">
      <header class="sp-l-post__header">
        <h1 class="sp-l-post__title">
          {title}
        </h1>
        <p class="sp-l-post__published-date">
          {publishedDate}
        </p>
      </header>
      <div class="sp-l-post__body sp-l-flow">
        <SanityBlocks blocks={body} />
      </div>
    </div>
    <BackLink label="Back to scrapbook" path="/scrapbook" />
  </article>
</LayoutBase>

<style lang="postcss" global>
@import '../assets/styles/settings';
@import '../assets/styles/tools';

.sp-l-post {
  padding: var(--space-y-4) var(--space-x-4);

  @media (--mq-md) {
    padding: var(--space-y-6) var(--space-x-6);
  }

  @media (--mq-lg) {
    display: flex;
    flex-direction: row;
    width: 100%;
  }
}

.sp-l-post__inner {
  max-width: 704px;
  margin: 0 auto;
}

.sp-l-post__header {
  padding-bottom: var(--space-y-4);

  @media (--mq-md) {
    padding-bottom: var(--space-y-8);
  }
}

.sp-l-post__title {
  margin-bottom: var(--space-y-4);
  color: var(--color-brand-manhattan);
}

.sp-l-post__published-date {
  font-weight: 700;
}

</style>
