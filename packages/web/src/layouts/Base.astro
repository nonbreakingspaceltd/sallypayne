---
import Header from '../components/Header/Header.vue';
import Footer from '../components/Footer/Footer.vue';
import { getNavigation, getSiteSettings } from '../data/global';

const siteSettings = await getSiteSettings();

const { title, meta, variant } = Astro.props;
const canonicalURL = Astro.request.canonicalURL;
const currentPath = Astro.request.url.pathname;
const navigation = getNavigation(currentPath);
const variantClass = variant ? `sp-l-layout--${variant}` : '';
const isArticle = meta?.og?.type === 'article'

---
<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="robots" content={meta?.blockIndexing ? 'noindex, nofollow' : 'index'} />

    <link rel="canonical" href={canonicalURL} />

    <title>{meta?.title || title}</title>

    <meta name="description" content={meta?.description || title} />

    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#ffffff" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#ffffff" />
    <meta name="theme-color" content="#ffffff" />

    <!-- Open graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={meta?.description} />
    <meta property="og:type" content={meta?.og?.type || 'website'} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={meta?.og?.image} />
    <meta property="og:locale" content="en_GB" />

    {isArticle && <meta property="article:author" content="Sally Payne" />}
    {isArticle && <meta property="article:published_time" content={meta?.og?.publishedDate} />}

    <!-- Twitter card-->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@salpdesign" />

    {meta?.jsonLd && `<script type="application/ld+json">${JSON.stringify(meta.jsonLd)}</script>`}

    <!-- [additional meta] -->

    <link rel="preconnect" href="https://cdn.sanity.io" crossorigin />

    <!-- Replaced with preload font links -->
    <link rel="preload" as="font" href="/fonts/sketchysallysans-regular-webfont.woff2" crossorigin />

    <!-- [additional preconnects/preloads] -->

    <script id="js-head">
      document.documentElement.classList.add('js');
    </script>

    <style lang="postcss" global>
      @import "../assets/styles/global.css";
    </style>

    <!-- [additional css] -->

    <!-- [additional head scripts] -->

  </head>
  <body class={`sp-l-layout ${variantClass}`}>

    <Header client:idle title={siteSettings.title} links={navigation} class="sp-l-header" />

    <main class="sp-l-main">
      <slot />
    </main>

    <Footer client:visible class="sp-l-footer" />

    <!-- [additional foot scripts] -->

    <script id="js-body">
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', function() {
        navigator.serviceWorker.register('/service-worker.js');
        });
     }
    </script>

    <!-- Cookie Consent by https://www.FreePrivacyPolicy.com -->
    <script src="//www.freeprivacypolicy.com/public/cookie-consent/4.1.0/cookie-consent.js"></script>
    <script >
      document.addEventListener('DOMContentLoaded', function () {
        if(window.cookieconsent !== undefined) {
          window.cookieconsent.run({"notice_banner_type":"simple","consent_type":"express","palette":"light","language":"en","page_load_consent_levels":["strictly-necessary"],"notice_banner_reject_button_hide":false,"preferences_center_close_button_hide":false,"page_refresh_confirmation_buttons":false,"website_name":"Sally Payne"});
        }
      });
    </script>

    <!-- Google tag (gtag.js) -->
    <script type="text/plain" data-cookie-consent="tracking" async src="https://www.googletagmanager.com/gtag/js?id=G-YBTLEY7GL3"></script>
    <script type="text/plain" data-cookie-consent="tracking" id="js-gtag">
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-YBTLEY7GL3');
    </script>

  </body>
</html>
