---
import Header from '../components/Header/Header.vue';
import Footer from '../components/Footer/Footer.vue';
import { getNavigation, getSiteSettings } from '../data/global';

const siteSettings = await getSiteSettings();

const { title, meta, variant } = Astro.props;
const canonicalURL = Astro.request.canonicalURL;
const currentPath = Astro.request.url.pathname;
const navigation = getNavigation(currentPath);
const variantClass = variant ? `sp-l-layout--${variant}` : '';
const isArticle = meta?.og?.type === 'article'

---
<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="utf-8" />

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <meta name="robots" content={meta?.blockIndexing ? 'noindex, nofollow' : 'index'} />

    <link rel="canonical" href={canonicalURL} />

    <title>{meta?.title || title}</title>

    <meta name="description" content={meta?.description || title} />

    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#b7efc0" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#b7efc0" />
    <meta name="theme-color" content="#b7efc0" />

    <!-- Open graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={meta?.description} />
    <meta property="og:type" content={meta?.og?.type || 'website'} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:image" content={meta?.og?.image} />
    <meta property="og:locale" content="en_GB" />

    {isArticle && <meta property="article:author" content="Sally Payne" />}
    {isArticle && <meta property="article:published_time" content={meta?.og?.publishedDate} />}

    <!-- Twitter card-->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@salpdesign" />

    {meta?.jsonLd && `<script type="application/ld+json">${JSON.stringify(meta.jsonLd)}</script>`}

    <!-- [additional meta] -->

    <link rel="preconnect" href="https://cdn.sanity.io" crossorigin />

    <!-- Replaced with preload font links -->
    <link id="preload-fonts">

    <!-- [additional preconnects/preloads] -->

    <script id="js-head">
      document.documentElement.classList.add('js');
    </script>

    <!-- Replaced with inline CSS -->
    <link id="inline-css">

    <!-- [additional css] -->

    <!-- [additional head scripts] -->

  </head>
  <body class={`sp-l-layout ${variantClass}`}>

    <Header client:idle title={siteSettings.title} links={navigation} class="sp-l-header" />

    <main class="sp-l-main">
      <slot />
    </main>

    <Footer class="sp-l-footer" />

    <!-- [additional foot scripts] -->

  </body>
</html>

<style lang="postcss" global>
  @import "../assets/styles/index.css";
</style>
