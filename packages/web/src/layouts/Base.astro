---
import Header from '../components/Header/Header.vue';
import Footer from '../components/Footer/Footer.vue';
import { getNavigation } from '../data/global';

const { title, meta, modifier, path } = Astro.props;
const canonicalURL = Astro.request.canonicalURL;
const currentPath = Astro.request.url.pathname;
const req = Astro.request;
const navigation = getNavigation(currentPath);
---
<!DOCTYPE html>
<html lang="en">
  <head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="canonical" href={canonicalURL} />

    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#b7efc0" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#b7efc0" />
    <meta name="theme-color" content="#b7efc0" />

    <title>{meta?.title || title}</title>

    <meta name="description" content={meta?.description || title} />

    <!-- [additional meta] -->

    <link rel="preconnect" href="//cdn.sanity.io" crossorigin />

    <!-- Replaced with preload font links -->
    <link id="preload-fonts">

    <!-- [additional preconnects/preloads] -->

    <script id="js-head">
      document.documentElement.classList.add('js');
    </script>

    <!-- Replaced with inline CSS -->
    <link id="inline-css">

    <!-- [additional css] -->

    <!-- [additional head scripts] -->

  </head>
  <body class="sp-l-layout">

    <Header client:load links={navigation} class="sp-l-header" />

    <main class="sp-l-main">
      <div class={`sp-l-page sp-l-page--${modifier}`}>
        <div class="sp-l-page__inner">
          <slot />
        </div>
      </div>
    </main>

    <Footer class="sp-l-footer" />

    <!-- [additional foot scripts] -->

  </body>
</html>

<style>
  @import "../assets/styles/index.css";
</style>
