---
import Header from '../components/Header/Header.vue';
import Footer from '../components/Footer/Footer.vue';

const { title, meta, path } = Astro.props;
const canonicalURL = Astro.request.canonicalURL;
const req = Astro.request;
---
<style>
  @import "../assets/styles/index.css";
</style>

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="canonical" href={canonicalURL} />

    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png" />
    <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#b7efc0" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="msapplication-TileColor" content="#b7efc0" />
    <meta name="theme-color" content="#b7efc0" />

    <title>{meta?.title || title}</title>

    <meta name="description" content={meta?.description || title} />

    <!-- [additional meta] -->

    <link rel="preconnect" href="//cdn.sanity.io" crossorigin />
    <link rel="preload" as="font" href="/fonts/sketchysallysans-regular-webfont.woff2" />

    <!-- [additional preconnects/preloads] -->

    <script id="js-head">
      document.documentElement.classList.add('js');
    </script>

    <!-- [additional head css] -->

    <!-- [additional head scripts] -->

  </head>
  <body>

    <Header client:idle />

    <main>
      <h1>{title}</h1>
      <slot />
    </main>

    <Footer />

    <!-- [additional foot scripts] -->

  </body>
</html>

