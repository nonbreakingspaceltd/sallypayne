---
import type { ProductProps } from '../../../../types';
import { getProducts } from '../../../data/products';
import LayoutProduct from '../../../layouts/Product.astro';

type Props = ProductProps;

export async function getStaticPaths() {
  return getProducts();
}

const { title, price, description, image, url, meta } = Astro.props;

const product = {
  title,
  price,
  description,
  image,
  url,
};
---

<LayoutProduct variant="product" meta={meta} {...product} />
