---
const { variant, title, meta } = Astro.props;
const _variantClass = variant ? `sp-l-list--${variant}` : '';
---

<LayoutBase variant={variant} title={title} meta={meta}>
  <div class={`sp-l-list ${variantClass}`}>
    <h1 class="sp-o-pagetitle sp-u-sr-only">
      {title}
    </h1>
    <slot />
  </div>
</LayoutBase>

<style lang="postcss" is:global>
@import '../assets/styles/tools';

.sp-l-list {
  padding-block: var(--space-y-2);
  padding-inline: var(--space-x-2);
  position: relative;
  flex: 1;

  @media (--mq-sm) {
    padding-block: var(--space-y-4);
    padding-inline: var(--space-x-4);
  }
}

.sp-l-list--scrapbook {
  background-color: var(--color-brand-manhattan);
  color: var(--color-black);
}

.sp-l-list--shop {
  background-color: var(--color-brand-acapulco);
  color: var(--color-black);
}
</style>
